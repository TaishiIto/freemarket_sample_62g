= render "shared/header"

.main
  = render "shared/mypage_left"
  .card-form
    .card-form-block
      .card-header
        %h2 支払い方法
      .card-show
        .card-list
          %p1 クレジットカード一覧
        .card-detail
          .card-display
            .card-company
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2356129156", alt: "", height: "20", width: "49"
            .card-number
              = "**** **** **** " + @default_card_information.last4
            .card-day
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
          .card-delete
            = link_to delete_cards_path ,method: :delete,class:"card-delete__btn" do
              削除する

= render "shared/footer"
= render "shared/item-creater"