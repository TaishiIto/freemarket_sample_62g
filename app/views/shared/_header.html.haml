%header
  .header
    .header__main
      .header__top
        .logo
          = link_to root_path,class:"image__link" do
            = image_tag 'fmarket_logo_red.svg', height:'36',weidth:'134'
        %form.search__form
          %input.search{name: "keyword", placeholder: "何かお探しですか？", type: "search"}/
          %button.search__button
            %svg.svg__one{"aria-hidden" => "true", height: "16", viewbox: "0 0 16 16", width: "16"}
              %path{d: "M11.435 10.063h-.723l-.256-.247a5.92 5.92 0 0 0 1.437-3.87 5.946 5.946 0 1 0-5.947 5.947 5.92 5.92 0 0 0 3.87-1.437l.247.256v.723L14.637 16 16 14.637l-4.565-4.574zm-5.489 0A4.111 4.111 0 0 1 1.83 5.946 4.111 4.111 0 0 1 5.946 1.83a4.111 4.111 0 0 1 4.117 4.116 4.111 4.111 0 0 1-4.117 4.117z", fill: "currentColor", "fill-rule" => "nonzero"}
      .header__bottom
        .header__bottom__left
          .category
            = link_to ready_user_path(current_user.id),class:"category__inside" do
              %svg.svg__two{"aria-hidden" => "true", height: "16", viewbox: "0 0 20 16", width: "20"}
                %path{d: "M18.799 15.25h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zM2 16a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z", fill: "currentColor", "fill-rule" => "nonzero"}
              カテゴリーから探す
          .brand
            = link_to ready_user_path(current_user.id),class:"brand__inside" do
              %svg.svg__three{"aria-hidden" => "true", height: "16", viewbox: "0 0 23 16", width: "23"}
                %path{d: "M6.315 0L4.473 1.806 2.833.019.73 1.977l1.69 1.84L1.198 5.02c-1.594 1.594-1.594 4.188-.01 5.772L6.3 16h13.272a3.08 3.08 0 0 0 3.077-3.077V3.076A3.08 3.08 0 0 0 19.57 0H6.315zm13.46 12.925a.211.211 0 0 1-.205.205H7.504L3.227 8.771a1.226 1.226 0 0 1-.01-1.71L4.38 5.92l1.28 1.371a2.68 2.68 0 1 0 2.13-1.93L6.433 3.907 7.49 2.87h12.082a.211.211 0 0 1 .206.205v9.848h-.002z", :fill => "currentColor", "fill-rule" => "nonzero"}
              ブランドから探す
        - if user_signed_in?      
          %ul.header__bottom__right
            %li.like
              = link_to ready_user_path(current_user.id),class:"like__link" do
                %svg.svg__four{"aria-hidden" => "true", height: "15", viewbox: "0 0 16 15", width: "16"}
                  %path{d: "M8.08 12.711l-.08.082-.08-.082C4.112 9.188 1.6 6.858 1.6 4.496c0-1.635 1.2-2.861 2.8-2.861 1.232 0 2.432.81 2.856 1.929h1.496c.416-1.12 1.616-1.93 2.848-1.93 1.6 0 2.8 1.227 2.8 2.862 0 2.362-2.512 4.692-6.32 8.215M11.6 0C10.208 0 8.872.662 8 1.708 7.128.662 5.792 0 4.4 0 1.936 0 0 1.978 0 4.496c0 3.09 2.72 5.608 6.84 9.433L8 15l1.16-1.079C13.28 10.104 16 7.586 16 4.496 16 1.978 14.064 0 11.6 0", :fill => "currentColor", "fill-rule" => "evenodd"}
                いいね！一覧
            %li.information
              = link_to ready_user_path(current_user.id),class:"information__link" do
                %svg.svg__five{"aria-hidden" => "true", height: "16", viewbox: "0 0 14 16", width: "14"}
                  %path{d: "M6.592 16c.89 0 1.632-.734 1.632-1.632H4.928c0 .898.742 1.632 1.664 1.632zm4.896-4.928V6.976c-.008-2.521-1.345-4.63-3.712-5.184v-.576C7.79.55 7.241 0 6.56 0c-.68 0-1.23.55-1.216 1.216v.576c-2.36.554-3.704 2.654-3.712 5.184v4.096L0 12.704v.832h13.12v-.832l-1.632-1.632zm-1.632.832h-6.56V6.976c0-2.024 1.238-3.68 3.296-3.68 2.026 0 3.264 1.656 3.264 3.68v4.928z", :fill => "currentColor", "fill-rule" => "nonzero"}
                お知らせ
            %li.todo
              = link_to ready_user_path(current_user.id),class:"todo__link" do
                %svg.svg__six{"aria-hidden" => "true", height: "16", viewbox: "0 0 21 16", width: "21"}
                  %path{d: "M6.682 12.657L1.67 7.642 0 9.313 6.682 16 21 1.672 19.33 0z", fill: "currentColor", "fill-rule" => "nonzero"}
                やることリスト
            %li.mypage
              = link_to user_path(current_user.id),class:"mypage__link" do
                %img.mypage__image{alt: "", src: "https://static.mercdn.net/images/member_photo_noimage_thumb.png"}/
                マイページ
        - else
          .signup__login__btn
            .signup
              = link_to "新規会員登録", new_user_registration_path, class:"signup__btn"
            .login
              = link_to "ログイン", new_user_session_path, class:"login__btn"