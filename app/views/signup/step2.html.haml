= form_for @user, url: step3_signup_index_path, method: :get, html: {class: 'second-main-wrapper__box'} do |f|
  .form-group
    = f.text_field :family_name_kanji, placeholder: '例) 山田'
    = f.text_field :first_name_kanji, placeholder: '例) 彩'
    = f.text_field :family_name_kana, placeholder: '例) ヤマダ'
    = f.text_field :first_name_kana, placeholder: '例) アヤ'
    = f.text_field :phone_number, placeholder: '例) 09012345678'

  = f.fields_for :address do |fin|
    .form-group
      = fin.text_field :zip_code, placeholder: '例) 123-4567'
      = fin.collection_select :prefecture_id, Prefecture.all, :id, :name
      = fin.text_field :city, placeholder: '例) 横浜市緑区'
      = fin.text_field :house_number, placeholder: '例) 青山1-1-1'
      = fin.text_field :building_name, placeholder: '例) 柳ビル103'
      = f.submit '次へ進む', class: 'signup-main__btn-default signup-main__btn-red'